<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@color/white">

    <TextView
        android:id="@+id/tvFeature2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set budgets and get alerts"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingBottom="16dp" />

    <TextView
        android:id="@+id/tvFeature2Desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keep track of your monthly budget and receive notifications when you approach limits."
        android:textSize="16sp"
        android:paddingBottom="32dp" />

    <Button
        android:id="@+id/btnGetStarted3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Started" />

    <Button
        android:id="@+id/btnBack3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_marginTop="8dp" />

</LinearLayout>
